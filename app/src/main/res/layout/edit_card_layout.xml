<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/edit_card"
        android:layout_width="334dp"
        android:layout_height="115dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_card_login_show"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textAlignment="center"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@id/edit_card_service_icon"
                app:layout_constraintTop_toBottomOf="@id/edit_internal_login_hint" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_card_service_icon"
                android:layout_width="80dp"
                android:layout_height="67dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_vk"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edit_internal_login_hint"
                android:layout_width="84dp"
                android:layout_height="19dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Логин:"
                app:layout_constraintStart_toStartOf="@id/edit_card_service_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_card_password_show"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textAlignment="gravity"
                app:layout_constraintStart_toEndOf="@id/edit_card_login_show"
                app:layout_constraintTop_toBottomOf="@id/edit_internal_password_hint" />

            <TextView
                android:id="@+id/edit_internal_password_hint"
                android:layout_width="84dp"
                android:layout_height="19dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Пароль:"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/edit_internal_login_hint"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>